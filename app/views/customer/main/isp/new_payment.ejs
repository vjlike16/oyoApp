      <div class="main_content">
        <div class="container-fluid">
          <div class="home_detail_more">
            <section class="home_white_blocks">
              <div class="white_block_head">
                <h3>Payments & Tips</h3>
              </div>
              <div class="white_block_body">
                <% for(var i=0; i<appointments.length; i++) { %>
                  <% if (appointments[i].tip != 0) { %>
                    <div class="white_block_box">
                      <div class="white_block_img">
                        <img src="<%= baseUrl%>uploads/profile/<%= appointments[i].profile %>" alt="">
                      </div>
                      <div class="white_info_box">
                        <p>You have received the Tip of $<%= appointments[i].tip %> from your customer "<%= appointments[i].name %>".</p>
                      </div>
                    </div>
                  <% } %>
                <% } %>
                <% for(var i=0; i<appointments.length; i++) { %>
                  <div class="white_block_box">
                    <div class="white_block_img">
                      <img src="<%= baseUrl%>uploads/profile/<%= appointments[i].profile %>" alt="">
                    </div>
                    <div class="white_info_box">
                      <p>You have received the Payment of $<%= appointments[i].amount %> from your customer "<%= appointments[i].name %>".</p>
                    </div>
                  </div>
                <% } %>
                <% if (appointments.length == 0) { %>
                  <div class="white_block_box">
                    <div class="white_info_box">
                      <p>No data available</p>
                    </div>
                  </div>
                <% } %> 
              </div>
            </section>
            <!-- end:home_white_blocks -->
          </div>
        </div>
      </div>
      <!-- end:main_content -->
    </div>
    <!-- end:middle_block -->

