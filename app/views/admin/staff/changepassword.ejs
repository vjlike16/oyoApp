<!-- include header -->
<% include ../common/header %>
<!-- / end include -->


<div>


	<div class="page-title">
		<div class="title_left">
			<h3>Manage Password</h3>
		</div>
	</div>


	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="x_panel">
				<div class="x_title">
					<h2>Change Password</h2>
					<div class="clearfix"></div>
				</div>
				<form role="form" name="changePasswordForm" action="/admin/staff/changepasswordsave" role="form"
					method="post" class="login-form form-horizontal form-label-left">
					<fieldset>
						<div class="col-sm-12">
							<span class="section">Information</span>
						</div>

						<div class="col-sm-6 col-xs-12 item form-group">
							<label class="control-label col-md-4 col-sm-4 col-xs-12" for="currentpassword">Current
								Password <span class="text-error">*</span></label>
							<div class="col-md-8 col-sm-8 col-xs-12">
								<input type="password" name="currentpassword" id="currentpassword" class="form-control"
									placeholder="Current Password" />
							</div>
						</div>

						<div class="col-sm-6 col-xs-12 item form-group">
							<label class="control-label col-md-4 col-sm-4 col-xs-12" for="newpassword">New Password
								<span class="text-error">*</span></label>
							<div class="col-md-8 col-sm-8 col-xs-12">
								<input type="password" name="newpassword" id="newpassword" class="form-control"
									placeholder="New Password" required />
							</div>
						</div>
						<div class="col-sm-6 col-xs-12 item form-group">
							<label class="control-label col-md-4 col-sm-4 col-xs-12" for="repeatnewpassword">Confirm
								Password <span class="text-error">*</span></label>
							<div class="col-md-8 col-sm-8 col-xs-12">
								<input type="password" name="repeatnewpassword" id="repeatnewpassword"
									class="form-control" placeholder="Confirm Password" required />
							</div>
						</div>



					</fieldset>


					<div class="ln_solid"></div>
					<div class="form-group">
						<div class="col-sm-12">
							<button type="submit" class="btn btn-primary">Submit</button>
							<a href="<%- baseUrl %>admin/dashboard" class="btn btn-primary">Cancel</a>
						</div>
					</div>
				</form>
				<!-- /.table-responsive -->
			</div>
		</div>
	</div>
</div>

<script>
	jQuery.validator.addMethod("noSpace", function (value, element) {
		return value.indexOf(" ") < 0;
	}, "Space are not allowed.");

	jQuery.validator.addMethod("alphanumeric", function (value, element) {
		return this.optional(element) || /^[A-Za-z\d=#$@%!_*...-]+$/.test(value);
	}, "Please use letters numbers and special characters.");

	$(function () {
		$("form[name='changePasswordForm']").validate({
			rules: {
				currentpassword: {
					required: true,
					noSpace: true,
					alphanumeric: true
				},
				newpassword: {
					required: true,
					noSpace: true,
					alphanumeric: true,
					minlength: 8,
					maxlength: 15
				},
				repeatnewpassword: {
					required: true,
					equalTo: "#newpassword",
					alphanumeric: true,
					noSpace: true,
					minlength: 8,
					maxlength: 15
				}

			},

			messages: {
				currentpassword: {
					required: "Please enter current password."
				},
				newpassword: {
					required: "Please enter new password.",
					minlength: "Minimum length is 8.",
					maxlength: "Maximum length is 15.",
				},
				repeatnewpassword: {
					required: "Please enter password to confirm.",
					minlength: "Minimum password length is 8.",
					maxlength: "Maximum password length is 15.",
					equalTo: "Please enter matching passwords."
				}
			},
			submitHandler: function (form) {
				form.submit();
			}
		});
	});

</script>

