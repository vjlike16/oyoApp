<!-- include header -->
<% include ../common/header %>
<!-- / end include -->


<div>
	<div class="page-title">
		<div class="title_left">
			<h3>Manage popup content</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="x_panel">
				<div class="x_title">
					<h2>Edit popup content</h2>
					<div class="clearfix"></div>
				</div>
				<form enctype="multipart/form-data" role="form" name="PopupcontentForm"
					action="/admin/manage_pop_content/update" role="form" method="post"
					class="login-form form-horizontal form-label-left">
					<fieldset>
					<div class="col-sm-12">
						<span class="section">Information</span>
					</div>
					<div class="col-sm-12 col-xs-12 item form-group">
						<label class="control-label col-md-2 col-sm-2 col-xs-12" for="name"> Content For <span
								class="text-error">*</span></label>
						<div class="col-md-10 col-sm-10 col-xs-12">
							<div class="row">
								<div class="col-md-2">
									<div class="form-check" style="margin-top: 5px;">
									  <!-- <label class="form-check-label">
										<input type="radio" class="form-check-input" name="content_for" id="customer" value="Customer" <% if (result.content_for == 'Customer') {%> checked <% } %>> Customer
									  </label> -->
									  <label class="closed_checkbox">
										<input type="checkbox" name="Customer" class="Customer" <% if (result.content_for == 'Customer' || result.content_for == 'Both' ) {%> checked <% } %>>
										Customer</label>
									</div>
								</div>
								<div class="col-md-2">
									<div class="form-check" style="margin-top: 5px;">
										<!-- <label class="form-check-label">
										<input type="radio" class="form-check-input" name="content_for" id="businessOwner" value="Business Owner" <% if (result.content_for == 'Business Owner') {%> checked <% } %>> Business Owner 
										</label> -->
										<label class="closed_checkbox">
											<input type="checkbox" name="BusinessOwner" class="BusinessOwner" <% if (result.content_for == 'Business Owner' || result.content_for == 'Both' ) {%> checked <% } %>>
										Business Owner</label>
									</div>
								</div>
							  </div>
						</div>
					</div>
					<div class="col-sm-12 col-xs-12 item form-group">
						<label class="control-label col-md-2 col-sm-2 col-xs-12" for="name"> Content Title <span
								class="text-error">*</span></label>
						<div class="col-md-10 col-sm-10 col-xs-12">
							<input type="text" name="content_title" id="content_title" value="<%= result.content_title  %>" class="form-control" required
								placeholder="Content Title" />
						</div>
					</div>
					<div class="col-sm-12 col-xs-12 item form-group">
						<label class="control-label col-md-2 col-sm-2 col-xs-12" for="content">Expiring On<span
								class="text-error">*</span></label>
						<div class="col-md-10 col-sm-10 col-xs-12">
								<input class="datetimepicker" value="<%= dateFormat(result.expiring_on); %>" required type="text" name="expiring_on" id="expiring_on"
									 placeholder="Please Select Expiring date" readonly/>
						</div>
					</div>
					<div class="col-sm-6 col-xs-12 item form-group">
						<div class="form-group">
							<label class="control-label col-md-4 col-sm-4 col-xs-12" for="profileImage">Content Image <span class="text-error">*</span>
								</label>
							<div class="col-md-4 col-sm-4 col-xs-12 file-upload-wrapper-profileImage">
								<div class="file-upload-wrapper" data-text="">
									<input class="file-upload-field" type="file" name="profileImage" value="result.content_image" accept="image/jpeg,image/png,jpg|png"
										id="profileImage" style="margin-top: 6px;position: static;width: 100px;" placeholder="Profile Image" />
								</div>
							</div>
							<div class="col-md-2 col-sm-2">
								<% if (result.content_image == '' || result.content_image == 'null' || result.content_image == 'Null') {%>
								<label class="control-label col-md-3 col-sm-3 col-xs-12" for="profileImage"
									style="visibility: hidden;">Image</label>
								<img class="img-thumbnail" src="<%= baseUrl%>admin/images/user.png"
									class="form-control" style="width:40px;height:34px;">
								<input type="hidden" name="uploaded_profileImage" value="result.content_image"  />
								<%}else{%>
								<label class="control-label col-md-3 col-sm-3 col-xs-12" for="profileImage"
									style="visibility: hidden;">Image</label>
								<a title="Click to view large." target="_blank"
									href="<%= baseUrl%>uploads/profile/<%= result.content_image %>"><img
										class="img-thumbnail" src="<%= baseUrl%>uploads/profile/<%= result.content_image %>"
										class="form-control" style="width:40px;height:34px;"></a>
								<input type="hidden" name="uploaded_profileImage" value="<%= result.content_image %>" accept="image/jpeg,image/png,jpg|png" />
								<%}%>
								</div>	
								
						</div>
					</div>
				<div class="col-sm-12 col-xs-12" style="margin-top: 20px;">
					<label class="control-label col-md-2 col-sm-2 col-xs-12" for="name"> Content <span
							class="text-error">*</span></label>
					<div class="col-md-10 col-sm-10 col-xs-12 errorPlacement" >
						<textarea type="text" name="content" id="content" class="form-control" placeholder="Page Content"> <%= result.content  %> </textarea>
					</div>
				</div>

					</fieldset>


					<div class="ln_solid"></div>
					<div class="form-group">
						<div class="col-sm-12">
							<input type="hidden" name="_id" value="<%= result._id  %>" />
									<button type="submit" class="btn btn-primary">Submit</button>
									<a href="<%- baseUrl %>admin/manage_pop_content" class="btn btn-primary">Cancel</a>
								</div>
							</div>
				</form>
				<!-- /.table-responsive -->
			</div>
		</div>
	</div>
</div>
