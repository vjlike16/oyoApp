<!--image uplooad -->
<script src="<%- baseUrl %>validation/additional-methods-file-uploads.js"></script>
<script>
	$(function () {
		$("form[name='PopupcontentForm']").validate({
			ignore: [],
			debug: false,
			rules: {
				name: {
					required: true,
					lettersonly: true,
					maxlength: 50,
					normalizer: function (value) {
						return $.trim(value);
					},
					remote: {
						url: "<%- baseUrl %>admin/manage_pop_content/checknameexist",
						type: "post",
						data: {
							name: function () {
								return $('input[name="name"]').val();
							}
						},
						beforeSend: function () {
						},
						complete: function (data) {

						}
					},
				},
				profileImage: {
					extension: "png|jpeg|jpg",
					filesize: 5242880,  // in megabytes
					required: true
				},
				content: {
					ckrequired:true
				},
				content_title:{
					required : true,
					maxlength : 50
				},
				expiring_on:{
					required:true,

				}
			},

			messages: {
				name: {
					required: "Please enter name.",
					maxlength: "Maximum length is 40.",
					remote: "This name already exist in our system, Please use another."
				},
				profileImage: {
					extension: 'File must be JPEG, JPG or PNG',
					filesize :'Please upload a picture less than 5MB.',
					required:'Please select an image'
				//	"File must be JPEG, JPG or PNG, less than 5MB."
				},
				content:{
					ckrequired:'Please enter content.',
				},
				content_title:{
					required : 'Please enter content title.',
					maxlength: "Maximum length is 50.", 
				},
				expiring_on:{
                    required:'Please enter the expiration date.'
				}
			},

			submitHandler: function (form) {
				$(":submit").attr("disabled", true);
				form.submit();
			}
		});
	});
</script>


