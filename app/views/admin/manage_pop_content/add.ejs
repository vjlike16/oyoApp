<script>
		jQuery.validator.setDefaults({
		errorPlacement: function(error, element) {
			if (element.attr("name") == "content") {
				error.appendTo('.errorPlacement');
			}else{
				error.insertAfter(element);
			}	
		}
	});
	
</script>
