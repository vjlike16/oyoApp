<!-- include header -->
<% include ../common/header %>
<!-- / end include -->


<div>


	<div class="page-title">
		<div class="title_left">
			<h3>Manage Popup Content</h3>
		</div>
	</div>


	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="x_panel">
				<div class="x_title">
					<h2>Add  Popup Content</h2>
					<div class="clearfix"></div>
				</div>
				<form enctype="multipart/form-data" role="form" name="PopupcontentForm"
					action="/admin/manage_pop_content/save" role="form" method="post"
					class="login-form form-horizontal form-label-left">
					<fieldset>
						<div class="col-sm-12">
							<span class="section">Information</span>
						</div>
						<div class="col-sm-12 col-xs-12 item form-group">
							<label class="control-label col-md-2 col-sm-2 col-xs-12" for="name"> Content For <span
									class="text-error">*</span></label>
							<div class="col-md-10 col-sm-10 col-xs-12">
								<div class="row">
									<div class="col-md-2">
									  <div class="form-check" style="margin-top: 5px;">
										<!-- <label class="form-check-label">
										  <input type="radio" class="form-check-input" name="content_for" id="customer" value="Customer"> Customer
										</label> -->
										<label class="closed_checkbox">
											<input type="checkbox" name="Customer" class="Customer" checked>
										Customer</label>
									  </div>
									</div>
			  
									<div class="col-md-2">
									  <div class="form-check" style="margin-top: 5px;">
										<!-- <label class="form-check-label">
										  <input type="radio" class="form-check-input" name="content_for" id="businessOwner" value="Business Owner"> Business Owner 
										</label> -->
										<label class="closed_checkbox">
											<input type="checkbox" name="BusinessOwner" class="BusinessOwner" checked>
										Business Owner</label>
									  </div>
									</div>
								  </div>
							</div>
						</div>
						<div class="col-sm-12 col-xs-12 item form-group">
							<label class="control-label col-md-2 col-sm-2 col-xs-12" for="name"> Content Title <span
									class="text-error">*</span></label>
							<div class="col-md-10 col-sm-10 col-xs-12">
								<input type="text" name="content_title" id="content_title" class="form-control" required
									placeholder="Content Title" />
							</div>
						</div>
						<div class="col-sm-12 col-xs-12 item form-group">
							<label class="control-label col-md-2 col-sm-2 col-xs-12" for="name">Expiring On<span
									class="text-error">*</span></label>
							<div class="col-md-10 col-sm-10 col-xs-12">
								<input type="text" name="expiring_on" id="expiring_on" class="datetimepicker" placeholder="Please select a expiry date" autocomplete="off"/>
							</div>
						</div>
						<div class="col-sm-12 col-xs-12 item">
							<label class="control-label col-md-2 col-sm-2 col-xs-12" for="content">Content Image
								<span	class="text-error">*</span>
							</label>
							<div class="col-md-9 col-sm-9 col-xs-12 file-upload-wrapper-profileImage">
							<div class="file-upload-wrapper" data-text="">
								<input class="file-upload-field form-control" type="file" name="profileImage" id="profileImage" accept=".jpeg, .jpg, .png"
									 placeholder="Content Imagee" style="position: static;width: 100px;" />
							</div>
						</div>
					</div>
					<div class="col-sm-12 col-xs-12" style="margin-top: 30px;">
						<label class="control-label col-md-2 col-sm-2 col-xs-12" for="content"> Content <span
								class="text-error">*</span></label>
						<div class="col-md-10 col-sm-10 col-xs-12 errorPlacement" >
							<textarea type="text" name="content" id="content" class="form-control" placeholder="Page Content"></textarea>
						</div>
					</div>
					</fieldset>


					<div class="ln_solid"></div>
					<div class="form-group">
						<div class="col-sm-12">
							<!-- Change this to a button or input when using this as a form -->
							<button type="submit" class="btn btn-primary">Submit</button>
							<a href="<%- baseUrl %>admin/manage_pop_content" class="btn btn-primary">Cancel</a>
						</div>
					</div>
				</form>
				<!-- /.table-responsive -->
			</div>
		</div>
	</div>
</div>
